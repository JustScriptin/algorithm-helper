{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Development",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "args": ["dev"],
            "runtimeArgs": ["--inspect"],
            "sourceMaps": true,
            "env": {
              "NODE_ENV": "development"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          }
    ]
  }
  
  